generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native"]

}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String       @id @default(cuid())
  name          String?
  email         String       @unique
  emailVerified DateTime?
  image         String?
  password      String?
  company       String?
  role          String       @default("user")
  isActive      Boolean      @default(true)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  accounts      Account[]
  sessions      Session[]
  conversations Conversation[]
  messages      Message[]
  contacts      Contact[]
  opportunities Opportunity[]
  campaigns     Campaign[]
  webhooks      Webhook[]
  attendantStats AttendantStats[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Sistema de Atendimento
model Conversation {
  id           String             @id @default(cuid())
  contactId    String
  userId       String
  status       ConversationStatus @default(WAITING)
  channel      String
  department   String?
  priority     Priority          @default(NORMAL)
  subject      String?
  startedAt    DateTime          @default(now())
  closedAt     DateTime?
  rating       Int?
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  
  contact   Contact   @relation(fields: [contactId], references: [id])
  user      User      @relation(fields: [userId], references: [id])
  messages  Message[]
  tags      ConversationTag[]
}

model Message {
  id             String      @id @default(cuid())
  conversationId String
  userId         String?
  content        String
  messageType    MessageType @default(TEXT)
  isFromCustomer Boolean     @default(false)
  attachments    String[]    @default([])
  createdAt      DateTime    @default(now())
  
  conversation Conversation @relation(fields: [conversationId], references: [id])
  user         User?        @relation(fields: [userId], references: [id])
}

model Contact {
  id              String         @id @default(cuid())
  name            String
  email           String?
  whatsapp        String?
  phone           String?
  state           String?
  city            String?
  status          ContactStatus  @default(ACTIVE)
  firstContact    DateTime       @default(now())
  lastContact     DateTime?
  assignedUserId  String?
  notes           String?
  customFields    Json?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  
  assignedUser  User?          @relation(fields: [assignedUserId], references: [id])
  conversations Conversation[]
  opportunities Opportunity[]
  tags          ContactTag[]
}

// Sistema de Pipeline/Oportunidades
model Opportunity {
  id          String            @id @default(cuid())
  title       String
  description String?
  value       Float             @default(0)
  contactId   String
  userId      String
  stageId     String
  status      OpportunityStatus @default(OPEN)
  probability Int               @default(0)
  expectedCloseDate DateTime?
  actualCloseDate   DateTime?
  source      String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  
  contact Contact         @relation(fields: [contactId], references: [id])
  user    User            @relation(fields: [userId], references: [id])
  stage   PipelineStage   @relation(fields: [stageId], references: [id])
  activities OpportunityActivity[]
}

model PipelineStage {
  id          String        @id @default(cuid())
  name        String
  description String?
  order       Int
  isActive    Boolean       @default(true)
  color       String        @default("#3B82F6")
  createdAt   DateTime      @default(now())
  
  opportunities Opportunity[]
}

model OpportunityActivity {
  id            String      @id @default(cuid())
  opportunityId String
  type          String
  description   String
  date          DateTime    @default(now())
  createdAt     DateTime    @default(now())
  
  opportunity Opportunity @relation(fields: [opportunityId], references: [id])
}

// Sistema de Campanhas
model Campaign {
  id          String         @id @default(cuid())
  name        String
  description String?
  type        CampaignType   @default(EMAIL)
  status      CampaignStatus @default(DRAFT)
  targetAudience String?
  content     String?
  startDate   DateTime?
  endDate     DateTime?
  userId      String
  metrics     Json?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  
  user User @relation(fields: [userId], references: [id])
}

// Sistema de Canais
model Channel {
  id          String        @id @default(cuid())
  name        String
  type        ChannelType
  status      ChannelStatus @default(ACTIVE)
  config      Json?
  isConnected Boolean       @default(false)
  lastSync    DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

// Sistema de Webhooks
model Webhook {
  id          String        @id @default(cuid())
  name        String
  url         String
  method      String        @default("POST")
  events      String[]      @default([])
  headers     Json?
  isActive    Boolean       @default(true)
  userId      String
  lastTriggered DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  user User @relation(fields: [userId], references: [id])
  logs WebhookLog[]
}

model WebhookLog {
  id        String    @id @default(cuid())
  webhookId String
  event     String
  payload   Json
  response  Json?
  status    Int?
  createdAt DateTime  @default(now())
  
  webhook Webhook @relation(fields: [webhookId], references: [id])
}

// Sistema de Chatbot
model ChatbotFlow {
  id          String   @id @default(cuid())
  name        String
  description String?
  config      Json
  isActive    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Sistema de Bloqueios
model BlockedContact {
  id        String   @id @default(cuid())
  contact   String
  reason    String?
  blockedAt DateTime @default(now())
  blockedBy String?
}

// Sistema de Parceiros
model Partner {
  id          String        @id @default(cuid())
  name        String
  type        String
  status      PartnerStatus @default(ACTIVE)
  apiKey      String?
  config      Json?
  isConnected Boolean       @default(false)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

// Sistema de Custos
model Cost {
  id          String   @id @default(cuid())
  service     String
  category    String
  amount      Float
  currency    String   @default("BRL")
  date        DateTime
  description String?
  createdAt   DateTime @default(now())
}

// Tags e Etiquetas
model ContactTag {
  id        String   @id @default(cuid())
  contactId String
  name      String
  color     String   @default("#3B82F6")
  createdAt DateTime @default(now())
  
  contact Contact @relation(fields: [contactId], references: [id])
}

model ConversationTag {
  id             String   @id @default(cuid())
  conversationId String
  name           String
  color          String   @default("#3B82F6")
  createdAt      DateTime @default(now())
  
  conversation Conversation @relation(fields: [conversationId], references: [id])
}

// Estatísticas e Métricas
model AttendantStats {
  id              String   @id @default(cuid())
  userId          String
  date            DateTime
  totalChats      Int      @default(0)
  activeChats     Int      @default(0)
  closedChats     Int      @default(0)
  avgResponseTime Float?
  rating          Float?
  
  user User @relation(fields: [userId], references: [id])
  
  @@unique([userId, date])
}

model DashboardMetric {
  id        String   @id @default(cuid())
  type      String
  name      String
  value     Float
  date      DateTime
  metadata  Json?
  createdAt DateTime @default(now())
}

// Configurações do Sistema
model SystemConfig {
  id    String @id @default(cuid())
  key   String @unique
  value String
  type  String @default("string")
}

// Enums
enum ConversationStatus {
  WAITING
  ACTIVE
  CLOSED
  TRANSFERRED
}

enum MessageType {
  TEXT
  IMAGE
  AUDIO
  VIDEO
  FILE
  LOCATION
}

enum ContactStatus {
  ACTIVE
  INACTIVE
  BLOCKED
}

enum OpportunityStatus {
  OPEN
  WON
  LOST
  CANCELLED
}

enum Priority {
  LOW
  NORMAL
  HIGH
  URGENT
}

enum CampaignType {
  EMAIL
  SMS
  WHATSAPP
  PUSH
}

enum CampaignStatus {
  DRAFT
  SCHEDULED
  RUNNING
  PAUSED
  COMPLETED
  CANCELLED
}

enum ChannelType {
  WHATSAPP
  TELEGRAM
  FACEBOOK
  INSTAGRAM
  EMAIL
}

enum ChannelStatus {
  ACTIVE
  INACTIVE
  ERROR
}

enum PartnerStatus {
  ACTIVE
  INACTIVE
  PENDING
}
